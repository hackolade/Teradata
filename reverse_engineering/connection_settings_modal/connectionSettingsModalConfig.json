					"key": "useSshTunnel",
					"value": false
				}
			},
			{
				"inputLabel": "SSH User Name",
				"inputKeyword": "sshTunnelUsername",
				"inputType": "text",
				"inputPlaceholder": "SSH User Name",
				"disable": {
					"key": "useSshTunnel",
					"value": false
				},
				"validation": {
					"regex": "([^s])"
				}
			},
			{
				"inputLabel": "SSH Auth Method",
				"inputKeyword": "sshAuthMethod",
				"inputType": "select",
				"options": [
					{
						"value": "IDENTITY_FILE",
						"label": "Private Key"
					},
					{
						"value": "USER_PASSWORD",
						"label": "Password"
					}
				],
				"disable": {
					"key": "useSshTunnel",
					"value": false
				}
			},
			{
				"inputLabel": "Private Key",
				"inputKeyword": "sshTunnelIdentityFile",
				"inputType": "file",
				"inputPlaceholder": "Private Key",
				"extensions": ["*"],
				"dependency": {
					"key": "sshAuthMethod",
					"value": "IDENTITY_FILE"
