				"disable": {
					"key": "useSshTunnel",
					"value": false
				}
			},
			{
				"inputLabel": "Passphrase",
				"inputKeyword": "sshTunnelPassphrase",
				"inputType": "password",
				"inputPlaceholder": "Passphrase",
				"dependency": {
					"key": "sshAuthMethod",
					"value": "IDENTITY_FILE"
				},
				"disable": {
					"key": "useSshTunnel",
					"value": false
				}
			},
			{
				"inputLabel": "Client key password",
				"inputKeyword": "sshTunnelPassword",
				"inputType": "password",
				"inputPlaceholder": "Client key password",
				"dependency": {
					"key": "sshAuthMethod",
					"value": "USER_PASSWORD"
				},
				"disable": {
					"key": "useSshTunnel",
					"value": false
				},
				"validation": {
					"regex": "([^s])"
				}
			}
		]
